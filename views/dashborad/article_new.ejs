<% include partials/dashborad_head.ejs %>
<% include partials/dashborad_header.ejs %>
<main id="main">
    <h1>oprat menu punkt</h1>
    <form action="/dashborad/article/create" method="POST" class="create" enctype="multipart/form-data">
        <label for="name">skriv en title p√• din artikel</label>
        <input type="text" name="title" value="<%= (typeof title != 'undefined')? title: '' %>">
        <label for="image">upload billede til din artikel</label>
        <div id="uploadbutton">
            <figure>
                Upload
            </figure>
            <input type="file" name="image" id="uploadfield" value="<%= (typeof title != 'undefined')? title: '' %>">
        </div>
        <label for="description">text til din artikel</label>
        <textarea name="description"  cols="30" rows="10">
            <%= (typeof description != 'undefined')? description: '' %> 
        </textarea>
        <select name="menu" style="display:block">
            <% menus.forEach(menu => { %>
            <option value="<%= menu.id %>">
                <%=  menu.name %>
            </option>
            <% }); %>
        </select>
        <p><%= (typeof errorMessage != "undefined") ? errorMessage : '' %></p>
        <button type="submit">oprat article</button>
    </form>
</main>
</body>
